{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "CommonJS",
    "declaration": true,
    "lib": ["ES2022"],
    "target": "ESNext",
    "outDir": "./dist/transformer",
    "sourceMap": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "plugins": []
  },
  "include": [
    "./src/transformer/**/*"
  ]
}
